---
import Card from '../ui/Card.astro';

interface Target {
  title: string;
  description: string;
  icon?: string;
  points?: string[];
}

interface Props {
  title?: string;
  subtitle?: string;
  targets: Target[];
}

const {
  title = 'Nous sommes là pour vous',
  subtitle = 'Que vous soyez un aîné, un proche ou une résidence, notre équipe peut vous aider.',
  targets,
} = Astro.props;
---

<section class="py-16 lg:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      {subtitle && <p class="text-lg text-gray-700 max-w-2xl mx-auto">{subtitle}</p>}
    </div>

    <!-- Targets Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        targets.map((target) => (
          <Card title={target.title} description={target.description} icon={target.icon}>
            {target.points && (
              <ul class="space-y-3 text-sm list-none">
                {target.points.map((point) => (
                  <li class="flex items-start gap-3">
                    <span class="text-gray-600">{point}</span>
                  </li>
                ))}
              </ul>
            )}
          </Card>
        ))
      }
    </div>
  </div>
</section>
