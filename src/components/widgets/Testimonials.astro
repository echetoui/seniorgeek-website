---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
  image?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  testimonials: Testimonial[];
}

const {
  title = 'Ce que disent nos clients',
  subtitle = 'Des histoires inspirantes',
  testimonials,
} = Astro.props;
---

<section class="py-16 lg:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
      {subtitle && <p class="text-lg text-gray-700 max-w-2xl mx-auto">{subtitle}</p>}
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <div class="bg-gray-50 rounded-lg p-8 border border-gray-200">
            {/* Stars */}
            <div class="flex gap-1 mb-4">
              {[...Array(5)].map(() => (
                <span class="text-yellow-400 text-lg">â˜…</span>
              ))}
            </div>

            {/* Quote */}
            <p class="text-gray-700 mb-6 italic text-base leading-relaxed">"{testimonial.quote}"</p>

            {/* Author */}
            <div class="border-t border-gray-200 pt-4">
              {testimonial.image && (
                <img src={testimonial.image} alt={testimonial.author} class="w-12 h-12 rounded-full mb-3" />
              )}
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-gray-600 text-sm">{testimonial.role}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
