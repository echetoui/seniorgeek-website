---
interface Props {
  text: string;
  href?: string;
  type?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  icon?: string;
  target?: string;
  rel?: string;
}

const {
  text,
  href = '#',
  type = 'primary',
  size = 'md',
  class: customClass = '',
  icon,
  target,
  rel,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-semibold rounded-lg transition-all duration-300 gap-2 cursor-pointer hover:scale-105 focus:outline-2 focus:outline-offset-2';

const typeStyles = {
  primary: 'bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 shadow-lg hover:shadow-xl focus:outline-blue-600',
  secondary: 'bg-gradient-to-r from-gray-100 to-gray-200 text-gray-900 hover:from-gray-200 hover:to-gray-300 shadow-md hover:shadow-lg focus:outline-gray-700',
  outline: 'border-2 border-blue-600 text-blue-600 hover:bg-blue-50 hover:border-blue-700 focus:outline-blue-600',
};

const sizeStyles = {
  sm: 'px-3 py-2 text-sm',
  md: 'px-5 py-3 text-base',
  lg: 'px-6 py-4 text-lg',
};

const classes = `${baseStyles} ${typeStyles[type]} ${sizeStyles[size]} ${customClass}`;
---

{
  href ? (
    <a href={href} class={classes} target={target} rel={rel}>
      {icon && <span class={`icon-${icon}`} />}
      {text}
    </a>
  ) : (
    <button class={classes}>
      {icon && <span class={`icon-${icon}`} />}
      {text}
    </button>
  )
}
