---
interface Props {
  text: string;
  type?: 'primary' | 'success' | 'warning' | 'info';
  class?: string;
}

const { text, type = 'primary', class: customClass = '' } = Astro.props;

const typeStyles = {
  primary: 'bg-blue-100 text-blue-800',
  success: 'bg-green-100 text-green-800',
  warning: 'bg-orange-100 text-orange-800',
  info: 'bg-gray-100 text-gray-800',
};

const classes = `inline-block px-3 py-1 rounded-full text-sm font-medium ${typeStyles[type]} ${customClass}`;
---

<span class={classes}>{text}</span>
