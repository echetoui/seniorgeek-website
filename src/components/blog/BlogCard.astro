---
interface Props {
  title: string;
  description: string;
  publishDate?: Date;
  image?: string;
  category?: string;
  slug: string;
  author?: string;
}

const { title, description, publishDate, image, category, slug, author } = Astro.props;

const formattedDate = publishDate
  ? new Intl.DateTimeFormat('fr-CA', { year: 'numeric', month: 'long', day: 'numeric' }).format(publishDate)
  : null;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 flex flex-col h-full">
  {
    image && (
      <div class="w-full h-48 overflow-hidden bg-gray-200">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          loading="lazy"
          decoding="async"
          width="400"
          height="300"
        />
      </div>
    )
  }

  <div class="p-6 flex-1 flex flex-col">
    {category && (
      <div class="mb-2">
        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-semibold rounded-full">
          {category}
        </span>
      </div>
    )}

    <h3 class="text-xl font-semibold text-gray-900 mb-3 leading-tight">
      <a href={`/blog/${slug}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h3>

    <p class="text-gray-700 text-base leading-relaxed mb-4 flex-1">
      {description}
    </p>

    <div class="flex items-center justify-between pt-4 border-t border-gray-200">
      <div class="flex flex-col text-sm text-gray-600">
        {formattedDate && <span>{formattedDate}</span>}
        {author && <span class="text-gray-500">{author}</span>}
      </div>
      <a href={`/blog/${slug}`} class="text-blue-600 hover:text-blue-800 font-medium transition-colors">
        Lire â†’
      </a>
    </div>
  </div>
</article>
